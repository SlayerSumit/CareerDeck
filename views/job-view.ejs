<% if(type){ %>
<%- include('partials/header2') %>
<% }else{ %>
<%- include('partials/headerc') %>
<% } %>

<div class="ftco-section bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-lg-8 mb-5 left-col-jobpost p-5 bg-white">
        <div class="row form-group">
          <div class="col-md-12 mb-3 mb-md-0">
            <label class="font-weight-bold" for="fullname">Job Title</label>
            <p><%= job.name %> </p>
          </div>
        </div>

        <div class="row form-group mb-5">
          <div class="col-md-12 mb-3 mb-md-0">
            <label class="font-weight-bold" for="fullname">Company</label>
            <p><%= job.company %></p>
          </div>
        </div>


        <div class="row form-group">
          <div class="col-md-12">
            <h3>Job Type</h3>
          </div>
          <div class="col-md-12 mb-3 mb-md-0">
            <p><%= job.jobType %> </p>

          </div>

          <div class="row form-group mb-4">
            <div class="col-md-12">
              <h3>Location</h3>
            </div>
            <div class="col-md-12 mb-3 mb-md-0">
              <p><%= job.location %> </p>
            </div>
          </div>

          <div class="row form-group">
            <div class="col-md-12">
              <h3>Job Description</h3>
            </div>
            <div class="col-md-12 mb-3 mb-md-0">
              <p><%= job.Description %> </p>
            </div>
          </div>

          <div class="row form-group">
            <div class="col-md-12 mb-3 mb-md-0">
              <label class="font-weight-bold" for="fullname">Salary</label>
              <p><%= job.salary %></p>
            </div>
          </div>

          <div class="row form-group">
            <div class="col-md-12">
              <% if(type){ %>
              <form action="/post-a-job" method="POST">
                <input type="submit" value="Apply" class="btn btn-primary  py-2 px-5">
              </form>
              <% }else{ %>
              <form action="/delete-a-job" method="POST">
                <input type="submit" value="Delete" class="btn btn-primary  py-2 px-5">
              </form>
              <% } %>

            </div>
          </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


<footer class="footer">
  <!-- Footer part -->
  <%- include('partials/footer') %>