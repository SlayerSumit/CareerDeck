<%- include('partials/header2') %>

<!-- Create Profile-->

<div class="create-profile ">
  <div class="container">
    <div class="row">
      <div class="col-md-8 m-auto">
        <a href="signup-create-profile.html" class="btn btn-primary">Go Back</a>
        <h1 class="display-4 text-center">Add your Education</h1>
        <p class="lead text-center">Your Profile helps you discover the right people and opportunities</p>
        <small class="d-block pb-3">* = required field</small>
        <form action="/signup-add-education" method="POST">

          <div class="form-group">
            <small class="form-text text-muted">College/University *</small>
            <input type="text" class="form-control form-control-lg" placeholder="Enter your College/University"
              name="college_university" required />
          </div>

          <div class="form-group">
            <small class="form-text text-muted">Degree *</small>
            <input type="text" class="form-control form-control-lg" placeholder="Enter your Degree" name="degree"
              required />
          </div>

          <div class="form-group">
            <small class="form-text text-muted">Specialization *</small>
            <input type="text" class="form-control form-control-lg" placeholder="Specialization" name="Specialization"
              required />
          </div>

          <div class="form-group">
            <small class="form-text text-muted">Start Year *</small>
            <input type="number" min="1960" max="2020" value="1960" class="form-control form-control-lg"
              placeholder="Start Year" name="start_year" required />
          </div>

          <div class="form-group">
            <small class="form-text text-muted">End Year *</small>
            <input type="number" min="1960" max="2024" value="1960" class="form-control form-control-lg"
              placeholder="End Year" name="end_year" required />
          </div>

          <div class="form-group">
            <small class="form-text text-muted">Current CGPA *</small>
            <input type="number" class="form-control form-control-lg" placeholder="CGPA/Percentage" name="cgpa"
              required />
          </div>

          <div class="form-group">
            <small class="form-text text-muted">Additional Degrees</small>
            <input type="text" class="form-control form-control-lg" placeholder="Enter your Degrees seperated by ,"
              name="adegree" />
          </div>

          <div class="form-group">
            <span class="form-text text-muted">Resume/CV *</span>
            <label for="myfile">Select a file: </label>
            <input type="file" id="myfile" name="myfile"><br><br>
          </div>
          <input type="submit" class="btn btn-primary btn-block mt-4" />
        </form>

      </div>
    </div>
  </div>
</div>





